             	</div>


           	        <div>

	              			<%= link_to 'Powrót', root_path, class: "btn btn-lg btn-primary" %>

	          			
	          			<% if current_user && current_user&.admin? %>

	                        <%= link_to 'Edytuj', edit_about_path(id: 1), class: 'btn btn-lg btn-info' %>
	                    <% end %>

                    </div>

    	</div>
