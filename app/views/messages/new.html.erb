<section class="container pt-5">
    <div class="row pt-5">
        <div class="col-12 pt-5">

        <h3 class="text-center pt-5">Formularz kontaktowy</h3>

       </div>
     </div>

      <%= form_with(model: @message, local: true, html: {multipart: true}) do |f| %>
        <% if @message.errors.any? %>
          <div id="error_explanation">
            <h3><%= pluralize(@message.errors.count, "error") %> prohibited this contact from being saved:</h2>

            <ul>
            <% @message.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="field p-3 text-center">
          <h3><%= f.label :Imię %></h3>
          <%= f.text_field :name, class: "form-control", style: "height:50px;"%>
        </div>
        <div class="field p-3 text-center">
          <h3><%= f.label :Email %></h3>
          <%= f.text_field :email, class: "form-control", style: "height:50px;"%>
        </div>
        <div class="field p-3 text-center">
          <h3><%= f.label :Wiadomość %></h3>
          <%= f.text_area :body, class: "form-control", style: "height:200px; width:100%;"%>
        </div>

        <div class="row mt-1 pb-5 text-center">
          <div class="col-md-12 pb-5">
          <%= f.submit "Wyślij", class: "btn btn-lg btn-secondary"%>
          </div>
        </div>
      <% end %>
</section>