<section class="container flex-column text-center d-flex justify-content-center login pt-5 pb-5">
    <div class="row pt-5">
        <div class="col-12 pt-5">

        <h3 class="text-center">Formularz kontaktowy</h3>

       </div>
     </div>

    <%= form_for(@message) do |f| %>

      <div class="field">
        <%= f.label :Imię %><br>
        <%= f.text_field :name, class: "form-control"%>
      </div>

      <div class="field">
        <%= f.label :Email %><br>
        <%= f.text_field :email, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :Tekst %><br>
        <%= f.text_field :body, class: "form-control", style: "height:100px;" %>
      </div>

      <div class="pt-3 pb-2 captcha">
        <%= recaptcha_tags %>
      </div>

      <div class="actions pb-5">
        <%= f.submit "Wyślij", class: "btn_login" %>
      </div>
    <% end %>
</section>