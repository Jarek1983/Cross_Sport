<div class="container flex-column text-center d-flex justify-content-center login" style="padding-top: 10%">

  <div class="p-2">
    <h1>Zaloguj się</h1>

  </div>

  <div class="p-2">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", style: "height:50px;" %>
      </div>

      <div class="field">
        <%= f.label :hasło %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control", style: "height:50px;" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: "form-control", style: "height:50px;" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Zaloguj się", class: "btn_login" %>
      </div>
    <% end %>
  </div>

  <div class="p-5">
 <!--    <%= render "devise/shared/links" %> -->
  </div>

</div>
