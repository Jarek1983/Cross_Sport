<section class="container-fluid pt-5 pb-5">
   <div class="row pt-5">
      <div class="col-12">
       
        <p id="notice"><%= notice %></p>

        <h2 class="text-center pt-4"><span class="badge badge-dark">Nasz Team</span></h2>
      </div>

      <% if current_user && current_user&.admin? %>

          <%= link_to 'Nowy wpis', new_player_path, class: 'btn btn-info'  %>

      <% end %>

  </div>

      <div class="row pt-2 pb-5">

          <% @players.each do |player| %>
            <div class="col-md-12 col-lg-6 col-xl-4">
              <div class="card"> 
                <div class="card-topper">
                  <% if player.image.present? %>
                    <%= link_to player_path(player) do %>
                      <%= image_tag player.image.url, style: "width:100%; height:400px;object-fit:cover;" %>
                    <% end %>
                  <% else %>
                    No image
                  <% end %>
                </div>
                <div class="card-block text-center">
                    <h4 class="card-title text-center text-capitalize">
                      <%= player.name %>
                    </h4>
                            <% if current_user && current_user&.admin? %>

                              <%= link_to 'Pokaż', player, class: 'btn btn-md btn-primary' %>
                              <%= link_to 'Edytuj', edit_player_path(player), class: 'btn btn-md btn-info' %>
                              <%= link_to 'Usuń', player, method: :delete, data: { confirm: 'Czy napewno usunąć?' }, class: 'btn btn-md btn-danger' %>

                                <% else %>

                                  <%= link_to 'Pokaż', player, class: 'btn btn-md btn-primary' %>

                                <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
     
</section>