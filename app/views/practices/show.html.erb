<section class="container pt-5 pb-5">
  <div class="row pt-5">
      <div class="col-12">

  <p id="notice"><%= notice %></p>

  <p>
    <strong>Tytuł:</strong>
    <%= @practice.title %>
  </p>

  <p>
    <strong>Kategoria:</strong>
    <%= @practice.subtitle %>
  </p>

  </div>
      </div>

   <p>
     <% if @practice.image.present? %>
    <%= image_tag @practice.image.url, class: "responsive_img" %>
    <% else %>
    No image
    <% end %>
  </p>

  <p>
    <strong>Twórca:</strong>
    <%= @practice.boxtitle %>
  </p>

  <p>
    <strong>Treść:</strong>
    <%= @practice.boxinfo %>
  </p>

  <div class="pb-5">
      <%= link_to 'Powrót', practices_path, class: 'btn btn-lg btn-success' %>

    <% if current_user && current_user.admin? %>

      <%= link_to 'Edytuj', edit_practice_path(@practice), class: 'btn btn-lg btn-primary' %> 

    <% end %>
  </div>

</section>
