 <%= simple_form_for @practice do |f| %>
    <%= f.input :title, label: 'Podaj imię/pseudonim:' %>
    <%= f.input :subtitle, label: 'Podaj kategorię:', collection: ['Sprzęt', 'Zawody', 'Ogłoszenie', 'Trening', 'Komunikat'] %>
    <%= f.input :boxinfo, label: 'Podaj treść:', as: :trix_editor %> 
    <%= f.input :image, label: "Zdjęcie" %>
    <%= f.input :image_second, label: "Zdjęcie" %>
    <%= f.input :image_third, label: "Zdjęcie" %>
    <%= f.input :boxtitle, label: 'Podaj autora:', collection: ['Michał', 'Marta', 'Tomek', 'Jarek'] %>
    <%= link_to 'Powrót', practices_path, class: 'btn btn-md btn-info' %>
    <%= f.submit "Zapisz", class: 'btn btn-success' %>

<% end %>
